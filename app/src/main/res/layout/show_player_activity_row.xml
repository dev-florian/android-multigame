<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShowPlayerActivityRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/pick_player"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:paddingEnd="100dp"
        android:paddingStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/show_player_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/show_player_name"
                android:hint="@string/show_player_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"

                />

            <TextView
                android:id="@+id/show_player_firstname"
                android:hint="@string/show_player_firstname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/show_player_score"
            android:hint="@string/show_player_score"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:layout_marginStart="70dp"
            />

    </LinearLayout>



</LinearLayout>